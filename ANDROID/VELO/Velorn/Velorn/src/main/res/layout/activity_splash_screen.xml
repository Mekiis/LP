<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accueil"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical"
    android:background="@color/bg_color">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/splash_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_screen_title_txt"
        android:layout_marginTop="62dp"
        android:textColor="@color/text_color"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/splash_screen_subtitle_txt"
        android:id="@+id/splash_screen_subtitle"
        android:layout_below="@+id/splash_screen_title"
        android:textColor="@color/text_color"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size_subtitle" />

</RelativeLayout>
